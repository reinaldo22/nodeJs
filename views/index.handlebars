<h2>Postagens Recentes: </h2>

{{#each agendas}}

<div class="card mt-4">
    <div class="card-body">
        <h4>{{titulo}}</h4>
        <p>{{descricao}}</p>
        <p>{{conteudo}}</p>
        <a href="/agenda/{{slug}}"><button class="btn btn-primary">Leia mais</button></a>
        <hr>
        <small>Categoria: {{categoria.nome}}</small><br>
        <small>Data de Publicação: {{data}}</small>

    </div>

</div>

{{else}}
<h5>Nenhuma postagem</h5>
{{/each}}