{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<div class="card">
    <div class="card-body">
        <h4>Editar Postagem:</h4>
        <form action="/admin/agendas/nova" method="POST">
            <input type="hidden" value="{{agenda._id}}" name="id">
            <label for="titulo">Titulo:</label>
            <input type="text" name="titulo" class="form-control" value="{{agenda.titulo}}">
            <label for="slug">Slug:</label>
            <input type="text" name="slug" class="form-control" value="{{agenda.slug}}">
            <label for="descricao">Descricao:</label>
            <input type="text" name="descricao" class="form-control" value="{{agenda.descricao}}">
            <label for="conteudo">Conte√∫do</label>
            <textarea name="conteudo" class="form-control">{{agenda.conteudo}}</textarea>
            <label for="categoria">Categoria:</label>
            <select name="categoria" class="custom-select">
                {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>

            <button class="btn btn-primary mt-5">Editar</button>
        </form>

    </div>

</div>